# ============================================================
# Weather Opus — Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================================

# ----------------------------
# NextAuth.js
# ----------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here   # Generate: openssl rand -base64 32

# ----------------------------
# Google OAuth
# https://console.developers.google.com/
# ----------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------
# Supabase
# https://supabase.com/dashboard/project/_/settings/api
# ----------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ----------------------------
# OpenWeatherMap
# https://openweathermap.org/api
# ----------------------------
OPENWEATHER_API_KEY=your-openweather-api-key

# ----------------------------
# Stripe
# https://dashboard.stripe.com/test/apikeys
# ----------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create in Stripe Dashboard → Products)
STRIPE_MONTHLY_PRICE_ID=price_monthly_id
STRIPE_ANNUAL_PRICE_ID=price_annual_id

# ----------------------------
# App config
# ----------------------------
# Comma-separated list of admin emails
ADMIN_EMAILS=admin@example.com

NEXT_PUBLIC_APP_URL=http://localhost:3000
